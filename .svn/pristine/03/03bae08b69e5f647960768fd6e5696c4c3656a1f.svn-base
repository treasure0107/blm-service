.commonMain {
    width: 100%;
    height: 100%;
    overflow: hidden;
    font-family: "Microsoft YaHei";
}

.header_con {
    width: 100%;
    display: block;
    height: 50px;
    line-height: 50px;
    position: relative;
    box-shadow: 0px 0px 16px rgba(197, 197, 199, .5);
}

.logo {
    display: inline-block;
    width: 230px;
    height: 50px;
    line-height: 50px;
    text-align: center;
    background-color: #7b7de4 !important;
}

.merchant_name {
    display: inline-block;
    font-size: 14px;
    color: #666;
    height: 50px;
    line-height: 50px;
    padding: 0 30px;
}

.phone_num, .icon_setting, .icon_message, .turn_off {
    display: inline-block;
    position: absolute;

}
.phone_n{
    font-size:14px;
    color:#ff6e4b;
    margin-left: 6px;
}
.phone_num {
    right: 166px;
}

.icon_setting {
    right: 108px;
}

.icon_message {
    right: 68px;
}

.turn_off {
    right: 30px;
}

/*侧边栏*/
.sidebar_nav {
    width: 230px;
    height: 100%;
    background-color: #505773;
    float: left;
}

.sidebar_nav li {
    height: 50px;
    line-height: 50px;
    position: relative;
}

.sidebar_nav li a {
    display: block;
    width: 100%;
    height: 100%;
}

.sidebar_nav li span:last-child {
    font-size: 14px;
    color: #fff;
    padding-left: 20px;
    position: absolute;
    top: 3px;
}

.nav_img {
    display: inline-block;
    margin-left: 69px;
    padding-top: 1px;
}

.sidebar_nav li:hover {
    background-color: #484e66;
}
.merchant_details {
    display: block;
    height: 100px;
    margin: 20px 30px 20px 260px;
    box-shadow: 3px 0px 16px rgba(197, 197, 199, .5);
    overflow: hidden;

}

.merchant_tit {
    display: block;
    font-size: 16px;
    color: #333;
    padding-top: 16px;
    padding-left: 20px;
}

.details_con {
    font-size: 14px;
    color: #666;
    margin-top: 20px;
    margin-left: 10px;
}

.details_con .iconImg {
    margin-right: 5px;
}

.business_brand {
    font-size: 14px;
    color: #333;
    font-weight: bold;
}